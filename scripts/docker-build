#!/bin/sh -x

set -eo pipefail

# install mix
mix local.hex --force
mix local.rebar --force
mix hex.info

# build cog
cd /home/operable/cog
mix clean
mix deps.get
ALLOW_WARNINGS=true mix deps.compile
mix compile

# build cogctl
cd /home/operable/cogctl
git clone https://github.com/operable/cogctl .
mix deps.get
ALLOW_WARNINGS=true mix deps.compile
mix escript
